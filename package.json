{
  "name": "video-builder",
  "version": "1.0.0",
  "description": "Social Media Uploader is an open-source Node.js project designed to help users upload content to multiple social media platforms. Initially, it supports YouTube, with plans to extend support to other platforms such as Facebook, Instagram, Twitter, LinkedIn, and TikTok.",
  "main": "index.js",
  "scripts": {
    "build": "tsc && npm run copy-public",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "node dist/index.js",
    "dev": "concurrently \"tsc-watch --onSuccess 'npm run copy-public'\" \"nodemon dist/index.js\"",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "copy-public": "copyfiles -u 1 src/public/**/* dist"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/fluent-ffmpeg": "^2.1.25",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.4.0",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.8",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.4",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@types/express": "^4.17.21",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "fluent-ffmpeg": "^2.1.3",
    "googleapis": "^140.0.1",
    "multer": "^1.4.5-lts.1"
  }
}
